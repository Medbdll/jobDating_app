{% extends "layout.twig" %}

{% block content %}
<div class="w-full max-w-7xl mx-auto">
    <!-- Header -->
    <div class="glass-effect rounded-2xl p-8 mb-8 fade-in">
        <div class="flex justify-between items-center mb-6">
            <div>
                <h1 class="text-4xl font-bold text-gray-800 mb-2">Dashboard Apprenant</h1>
                <p class="text-gray-600">Découvrez les opportunités de carrière</p>
            </div>
            <div class="flex items-center space-x-4">
                <div class="text-right">
                    <p class="text-sm text-gray-500">Bienvenue</p>
                    <p class="font-semibold text-gray-800">{{ session.get('user_name') ?? 'Apprenant' }}</p>
                </div>
                <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-full flex items-center justify-center text-white font-bold">
                    {{ (session.get('user_name') ?? 'A')|first|upper }}
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Annonces disponibles</p>
                        <p class="text-3xl font-bold text-gray-800">{{ stats.total_announcements }}</p>
                    </div>
                    <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-briefcase text-blue-600 text-2xl"></i>
                    </div>
                </div>
            </div>
            <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-500 mb-1">Entreprises partenaires</p>
                        <p class="text-3xl font-bold text-gray-800">{{ stats.total_companies }}</p>
                    </div>
                    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-building text-green-600 text-2xl"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Flash Messages -->
    {% if flash_messages is not empty %}
        {% for type, message in flash_messages %}
            <div class="alert mb-6 p-4 rounded-lg {% if type == 'success' %}bg-green-100 text-green-700 border border-green-200{% elseif type == 'error' %}bg-red-100 text-red-700 border border-red-200{% else %}bg-blue-100 text-blue-700 border border-blue-200{% endif %}">
                <div class="flex items-center">
                    <i class="fas {% if type == 'success' %}fa-check-circle{% elseif type == 'error' %}fa-exclamation-circle{% else %}fa-info-circle{% endif %} mr-3"></i>
                    <span>{{ message }}</span>
                </div>
            </div>
        {% endfor %}
    {% endif %}

    <!-- Announcements List -->
    <div class="glass-effect rounded-2xl p-8 fade-in">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Annonces disponibles</h2>
            <div class="flex items-center space-x-2 text-gray-600">
                <i class="fas fa-filter"></i>
                <select class="px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    <option>Toutes les offres</option>
                    <option>Stage</option>
                    <option>Alternance</option>
                    <option>CDI</option>
                    <option>CDD</option>
                </select>
            </div>
        </div>

        {% if announcements is empty %}
            <div class="text-center py-12">
                <i class="fas fa-inbox text-6xl text-gray-300 mb-4"></i>
                <p class="text-gray-500 text-lg">Aucune annonce disponible pour le moment</p>
                <p class="text-gray-400 mt-2">Revenez plus tard pour découvrir de nouvelles opportunités</p>
            </div>
        {% else %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for announcement in announcements %}
                    <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-indigo-200">
                        <div class="p-6">
                            <div class="flex justify-between items-start mb-4">
                                <div class="flex-1">
                                    <h3 class="text-lg font-semibold text-gray-800 mb-2 line-clamp-2">{{ announcement.title }}</h3>
                                    <div class="flex items-center text-sm text-gray-600 mb-2">
                                        <i class="fas fa-building mr-2 text-indigo-500"></i>
                                        <span>{{ announcement.company_name }}</span>
                                    </div>
                                    <div class="flex items-center text-sm text-gray-600 mb-2">
                                        <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                                        <span>{{ announcement.location }}</span>
                                    </div>
                                </div>
                                <span class="px-3 py-1 bg-indigo-100 text-indigo-700 text-xs font-medium rounded-full">
                                    {{ announcement.contract_type }}
                                </span>
                            </div>
                            
                            <p class="text-gray-600 text-sm mb-4 line-clamp-3">{{ announcement.description }}</p>
                            
                            <div class="flex flex-wrap gap-2 mb-4">
                                {% set skills = announcement.skills|split(',') %}
                                {% for skill in skills[:3] %}
                                    <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">
                                        {{ skill|trim }}
                                    </span>
                                {% endfor %}
                                {% if skills|length > 3 %}
                                    <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">
                                        +{{ skills|length - 3 }}
                                    </span>
                                {% endif %}
                            </div>
                            
                            <div class="flex justify-between items-center">
                                <span class="text-xs text-gray-500">
                                    <i class="far fa-clock mr-1"></i>
                                    {{ announcement.created_at|date("d/m/Y") }}
                                </span>
                                <a href="/student/dashboard/announcement/{{ announcement.id }}" class="btn-primary px-4 py-2 text-white text-sm font-medium rounded-lg hover:shadow-lg transition-all duration-300">
                                    Voir details
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <!-- Navigation -->
    <div class="mt-8 flex justify-center space-x-4">
        <a href="/student/dashboard/applications" class="px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors duration-300">
            <i class="fas fa-list mr-2"></i>
            Mes candidatures
        </a>
        <a href="/logout" class="px-6 py-3 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors duration-300">
            <i class="fas fa-sign-out-alt mr-2"></i>
            Déconnexion
        </a>
    </div>
</div>

<style>
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>
{% endblock %}
