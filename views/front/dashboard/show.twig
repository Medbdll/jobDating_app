{% extends "layout.twig" %}

{% block content %}
<div class="w-full max-w-4xl mx-auto">
    <!-- Back Button -->
    <div class="mb-6">
        <a href="/student/dashboard" class="inline-flex items-center text-indigo-600 hover:text-indigo-800 transition-colors duration-300">
            <i class="fas fa-arrow-left mr-2"></i>
            Retour au dashboard
        </a>
    </div>

    <!-- Announcement Details -->
    <div class="glass-effect rounded-2xl p-8 fade-in">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-indigo-500 to-purple-600 p-6 text-white">
                <div class="flex justify-between items-start">
                    <div class="flex-1">
                        <h1 class="text-3xl font-bold mb-4">{{ announcement.title }}</h1>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div class="flex items-center">
                                <i class="fas fa-building mr-3 text-indigo-200"></i>
                                <div>
                                    <p class="text-sm text-indigo-200">Entreprise</p>
                                    <p class="font-semibold">{{ announcement.company_name }}</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-map-marker-alt mr-3 text-indigo-200"></i>
                                <div>
                                    <p class="text-sm text-indigo-200">Localisation</p>
                                    <p class="font-semibold">{{ announcement.location }}</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-file-contract mr-3 text-indigo-200"></i>
                                <div>
                                    <p class="text-sm text-indigo-200">Type de contrat</p>
                                    <p class="font-semibold">{{ announcement.contract_type }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <span class="px-4 py-2 bg-white text-indigo-600 font-medium rounded-full text-sm">
                        {{ announcement.contract_type }}
                    </span>
                </div>
            </div>

            <!-- Flash Messages -->
    {% if flash_messages is not empty %}
        {% for type, message in flash_messages %}
            <div class="alert mb-6 p-4 rounded-lg {% if type == 'success' %}bg-green-100 text-green-700 border border-green-200{% elseif type == 'error' %}bg-red-100 text-red-700 border border-red-200{% else %}bg-blue-100 text-blue-700 border border-blue-200{% endif %}">
                <div class="flex items-center">
                    <i class="fas {% if type == 'success' %}fa-check-circle{% elseif type == 'error' %}fa-exclamation-circle{% else %}fa-info-circle{% endif %} mr-3"></i>
                    <span>{{ message }}</span>
                </div>
            </div>
        {% endfor %}
    {% endif %}
            <div class="p-8">
                <!-- Description -->
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-info-circle mr-3 text-indigo-500"></i>
                        Description du poste
                    </h2>
                    <div class="prose max-w-none text-gray-600 leading-relaxed">
                        {{ announcement.description|raw|nl2br }}
                    </div>
                </div>

                <!-- Skills Required -->
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-tools mr-3 text-indigo-500"></i>
                        Compétences requises
                    </h2>
                    <div class="flex flex-wrap gap-3">
                        {% set skills = announcement.skills|split(',') %}
                        {% for skill in skills %}
                            <span class="px-4 py-2 bg-indigo-100 text-indigo-700 rounded-full font-medium">
                                {{ skill|trim }}
                            </span>
                        {% endfor %}
                    </div>
                </div>

                <!-- Company Info -->
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-building mr-3 text-indigo-500"></i>
                        Informations sur l'entreprise
                    </h2>
                    <div class="bg-gray-50 rounded-lg p-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <p class="text-sm text-gray-500 mb-1">Nom de l'entreprise</p>
                                <p class="font-semibold text-gray-800">{{ announcement.company_name }}</p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500 mb-1">Localisation</p>
                                <p class="font-semibold text-gray-800">{{ announcement.company_location }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Publication Date -->
                <div class="border-t pt-6">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center text-gray-500">
                            <i class="far fa-calendar-alt mr-2"></i>
                            <span>Publié le {{ announcement.created_at|date("d/m/Y à H:i") }}</span>
                        </div>
                        {% if announcement.updated_at != announcement.created_at %}
                            <div class="flex items-center text-gray-500">
                                <i class="far fa-edit mr-2"></i>
                                <span>Mis à jour le {{ announcement.updated_at|date("d/m/Y à H:i") }}</span>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="mt-8 flex flex-col sm:flex-row gap-4">
                    {% if has_applied %}
                        <div class="flex-1 px-6 py-3 bg-green-100 text-green-700 font-medium rounded-lg text-center">
                            <i class="fas fa-check-circle mr-2"></i>
                            Vous avez déjà postulé à cette offre
                        </div>
                        <a href="/student/dashboard/applications" class="px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors duration-300">
                            <i class="fas fa-list mr-2"></i>
                            Voir mes candidatures
                        </a>
                    {% else %}
                        <a href="/student/dashboard/apply/{{ announcement.id }}" class="flex-1 btn-primary px-6 py-3 text-white font-medium rounded-lg hover:shadow-lg transition-all duration-300">
                            <i class="fas fa-paper-plane mr-2"></i>
                            Postuler maintenant
                        </a>
                    {% endif %}
                    <button class="px-6 py-3 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 transition-colors duration-300">
                        <i class="fas fa-bookmark mr-2"></i>
                        Sauvegarder
                    </button>
                    <button class="px-6 py-3 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 transition-colors duration-300">
                        <i class="fas fa-share-alt mr-2"></i>
                        Partager
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
