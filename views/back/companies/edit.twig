{% extends "layout.twig" %}

{% block content %}
<div class="bg-white rounded-2xl shadow-2xl p-6">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-900 flex items-center gap-3">
            <span class="text-3xl">‚úèÔ∏è</span>
            Modifier une Entreprise
        </h2>
        <a href="/companies" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg flex items-center gap-2 transition-all duration-300 hover:shadow-lg">
            <span>üîô</span>
            Retour √† la liste
        </a>
    </div>

    <form action="/companies/update/{{ company.id }}" method="POST" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                    Nom de l'entreprise <span class="text-red-500">*</span>
                </label>
                <input type="text" id="name" name="name" value="{{ company.name }}" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                    placeholder="Ex: Creative Agency">
            </div>

            <div>
                <label for="location" class="block text-sm font-medium text-gray-700 mb-2">
                    Localisation <span class="text-red-500">*</span>
                </label>
                <input type="text" id="location" name="location" value="{{ company.location }}" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                    placeholder="Ex: Casablanca, Maroc">
            </div>

            <div>
                <label for="sector" class="block text-sm font-medium text-gray-700 mb-2">
                    Secteur d'activit√©
                </label>
                <input type="text" id="sector" name="sector" value="{{ company.sector }}"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                    placeholder="Ex: Informatique, Marketing, Construction">
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                    Email
                </label>
                <input type="email" id="email" name="email" value="{{ company.email }}"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                    placeholder="contact@entreprise.com">
            </div>

            <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                    T√©l√©phone
                </label>
                <input type="tel" id="phone" name="phone" value="{{ company.phone }}"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                    placeholder="+212 5XX-XXX-XXX">
            </div>
        </div>

        <div class="flex justify-end gap-4">
            <a href="/companies" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                Annuler
            </a>
            <button type="submit" class="bg-primary hover:bg-opacity-90 text-black px-6 py-2 rounded-lg transition-all duration-300 hover:shadow-lg">
                <span class="flex items-center gap-2">
                    <span>üíæ</span>
                    Mettre √† jour
                </span>
            </button>
        </div>
    </form>
</div>
{% endblock %}
