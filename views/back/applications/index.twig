{% extends "layout.twig" %}

{% block content %}
<div class="bg-white rounded-2xl shadow-2xl p-6">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-900 flex items-center gap-3">
            <span class="text-3xl">üìã</span>
            G√©rer les Candidatures
        </h2>
        <a href="/admin/dashboard" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg flex items-center gap-2 transition-all duration-300 hover:shadow-lg">
            <span>üîô</span>
            Retour au Dashboard
        </a>
    </div>

    {% if applications is empty %}
        <div class="text-center py-12">
            <div class="text-6xl mb-4">üìã</div>
            <h3 class="text-xl font-semibold text-gray-700 mb-2">Aucune candidature trouv√©e</h3>
            <p class="text-gray-500">Aucun √©tudiant n'a postul√© pour le moment.</p>
        </div>
    {% else %}
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-gray-200">
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">√âtudiant</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">Annonce</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">Entreprise</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">Localisation</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">Date de candidature</th>
                        <th class="text-left py-3 px-4 font-semibold text-gray-700">Statut</th>
                        <th class="text-center py-3 px-4 font-semibold text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for application in applications %}
                        <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                            <td class="py-3 px-4">
                                <div class="font-medium text-gray-900">{{ application.student_name }}</div>
                                <div class="text-sm text-gray-500">{{ application.student_email }}</div>
                                <div class="text-xs text-gray-400">{{ application.promotion }} - {{ application.specialisation }}</div>
                            </td>
                            <td class="py-3 px-4">
                                <div class="font-medium text-gray-900">{{ application.announcement_title }}</div>
                            </td>
                            <td class="py-3 px-4">
                                <div class="text-gray-600">{{ application.company_name }}</div>
                            </td>
                            <td class="py-3 px-4 text-gray-600">{{ application.announcement_location }}</td>
                            <td class="py-3 px-4 text-gray-600">
                                {{ application.applied_at ? application.applied_at|date('d/m/Y H:i') : 'N/A' }}
                            </td>
                            <td class="py-3 px-4">
                                {% if application.status == 'pending' %}
                                    <span class="px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm font-medium">
                                        ‚è≥ En attente
                                    </span>
                                {% elseif application.status == 'accepted' %}
                                    <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">
                                        ‚úÖ Accept√©e
                                    </span>
                                {% elseif application.status == 'rejected' %}
                                    <span class="px-3 py-1 bg-red-100 text-red-800 rounded-full text-sm font-medium">
                                        ‚ùå Rejet√©e
                                    </span>
                                {% endif %}
                            </td>
                            <td class="py-3 px-4">
                                <div class="flex justify-center gap-2">
                                    <a href="/applications/details/{{ application.id }}" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm transition-colors" title="Voir les d√©tails">
                                        voir
                                    </a>
                                    <form action="/applications/accept/{{ application.id }}" method="POST" style="display: inline;">
                                        <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-sm transition-colors" title="Accepter">
                                            ‚úÖ
                                        </button>
                                    </form>
                                    <form action="/applications/reject/{{ application.id }}" method="POST" style="display: inline;">
                                        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm transition-colors" title="Rejeter">
                                            ‚ùå
                                        </button>
                                    </form>
                                    {% if application.status != 'pending' %}
                                        <form action="/applications/pending/{{ application.id }}" method="POST" style="display: inline;">
                                            <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded text-sm transition-colors" title="Mettre en attente">
                                                ‚è≥
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
