{% extends "layout.twig" %}

{% block content %}
<div class="w-full max-w-7xl mx-auto">
    <!-- Header with Profile -->
    <div class="glass-effect rounded-2xl p-8 mb-8 fade-in">
        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-6">
            <div class="flex items-center space-x-4">
                <div class="w-20 h-20 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-full flex items-center justify-center text-white text-2xl font-bold shadow-lg">
                    {{ student.name|first|upper }}
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-gray-800">{{ student.name }}</h1>
                    <p class="text-gray-600">{{ student.specialization }} • Promotion {{ student.promotion }}</p>
                    {% if student.bio %}
                        <p class="text-sm text-gray-500 mt-2 max-w-md">{{ student.bio|slice(0, 100) }}{% if student.bio|length > 100 %}...{% endif %}</p>
                    {% endif %}
                </div>
            </div>
            <div class="flex space-x-3">
                <a href="/student/dashboard/profile" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors duration-300">
                    <i class="fas fa-user-edit mr-2"></i>
                    Modifier profil
                </a>
                <a href="/logout" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors duration-300">
                    <i class="fas fa-sign-out-alt mr-2"></i>
                    Déconnexion
                </a>
            </div>
        </div>
    </div>

    <!-- Flash Messages -->
    {% if flash_messages is not empty %}
        {% for type, message in flash_messages %}
            <div class="alert mb-6 p-4 rounded-lg {% if type == 'success' %}bg-green-100 text-green-700 border border-green-200{% elseif type == 'error' %}bg-red-100 text-red-700 border border-red-200{% else %}bg-blue-100 text-blue-700 border border-blue-200{% endif %}">
                <div class="flex items-center">
                    <i class="fas {% if type == 'success' %}fa-check-circle{% elseif type == 'error' %}fa-exclamation-circle{% else %}fa-info-circle{% endif %} mr-3"></i>
                    <span>{{ message }}</span>
                </div>
            </div>
        {% endfor %}
    {% endif %}

    <!-- Statistics Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 mb-1">Total candidatures</p>
                    <p class="text-3xl font-bold text-gray-800">{{ stats.total_applications }}</p>
                </div>
                <div class="w-14 h-14 bg-blue-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-paper-plane text-blue-600 text-xl"></i>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 mb-1">En attente</p>
                    <p class="text-3xl font-bold text-yellow-600">{{ stats.pending_applications }}</p>
                </div>
                <div class="w-14 h-14 bg-yellow-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-clock text-yellow-600 text-xl"></i>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 mb-1">Acceptées</p>
                    <p class="text-3xl font-bold text-green-600">{{ stats.accepted_applications }}</p>
                </div>
                <div class="w-14 h-14 bg-green-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-check-circle text-green-600 text-xl"></i>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 mb-1">Nouvelles offres</p>
                    <p class="text-3xl font-bold text-indigo-600">{{ stats.new_announcements }}</p>
                </div>
                <div class="w-14 h-14 bg-indigo-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-briefcase text-indigo-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- All Announcements -->
        <div class="lg:col-span-3">
            <div class="glass-effect rounded-2xl p-8 fade-in">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold text-gray-800">
                        <i class="fas fa-briefcase mr-2 text-indigo-500"></i>
                        Toutes les offres disponibles
                    </h2>
                    <div class="flex items-center space-x-4">
                        <span class="text-sm text-gray-500">{{ announcements|length }} offres</span>
                        <div class="relative">
                            <select id="typeFilter" class="px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-sm" onchange="filterAnnouncements()">
                                <option value="">Tous les types</option>
                                <option value="internship">Stage</option>
                                <option value="job">Emploi</option>
                                <option value="alternance">Alternance</option>
                            </select>
                            <i class="fas fa-filter absolute right-3 top-3 text-gray-400 pointer-events-none"></i>
                        </div>
                        <div class="relative">
                            <input type="text" id="searchInput" placeholder="Rechercher une offre..." 
                                   class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-sm"
                                   onkeyup="searchAnnouncements()">
                            <i class="fas fa-search absolute right-3 top-3 text-gray-400 pointer-events-none"></i>
                        </div>
                    </div>
                </div>
                
                {% if announcements is empty %}
                    <div class="text-center py-12">
                        <i class="fas fa-inbox text-6xl text-gray-300 mb-4"></i>
                        <h3 class="text-xl font-semibold text-gray-600 mb-2">Aucune offre disponible</h3>
                        <p class="text-gray-500 mb-4">Revenez plus tard pour découvrir de nouvelles opportunités</p>
                        <a href="/student/dashboard" class="btn-primary px-6 py-3 text-white font-medium rounded-lg hover:shadow-lg transition-all duration-300 inline-block">
                            <i class="fas fa-sync mr-2"></i>
                            Actualiser
                        </a>
                    </div>
                {% else %}
                    <div class="space-y-4" id="announcementsList">
                        {% for announcement in announcements %}
                            <div class="bg-white rounded-lg p-6 border border-gray-100 hover:border-indigo-200 transition-all duration-300 cursor-pointer" 
                                 onclick="window.location.href='/student/dashboard/announcement/{{ announcement.id }}'">
                                <div class="flex justify-between items-start mb-4">
                                    <div class="flex-1">
                                        <div class="flex items-center space-x-3 mb-2">
                                            <span class="px-3 py-1 bg-indigo-100 text-indigo-700 text-xs font-medium rounded-full">
                                                {% if announcement.contract_type and announcement.contract_type|trim != '' %}
                                                    {{ announcement.contract_type }}
                                                {% else %}
                                                    Non spécifié
                                                {% endif %}
                                            </span>
                                            <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">
                                                {% if announcement.company_name and announcement.company_name|trim != '' %}
                                                    {{ announcement.company_name }}
                                                {% else %}
                                                    Entreprise non spécifiée
                                                {% endif %}
                                            </span>
                                        </div>
                                        <h3 class="text-lg font-semibold text-gray-800 mb-2 line-clamp-2">{{ announcement.title }}</h3>
                                        <p class="text-sm text-gray-600 mb-3 line-clamp-3">{{ announcement.description }}</p>
                                        
                                        <div class="flex flex-wrap gap-2 mb-3">
                                            {% if announcement.skills and announcement.skills|trim != '' %}
                                                {% set skills = announcement.skills|split(',') %}
                                                {% for skill in skills[:4] %}
                                                    <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">
                                                        {{ skill|trim }}
                                                    </span>
                                                {% endfor %}
                                                {% if skills|length > 4 %}
                                                    <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">
                                                        +{{ skills|length - 4 }}
                                                    </span>
                                                {% endif %}
                                            {% else %}
                                                <span class="px-2 py-1 bg-gray-100 text-gray-400 text-xs rounded-full">
                                                    Aucune compétence spécifiée
                                                </span>
                                            {% endif %}
                                        </div>
                                        
                                        <div class="flex items-center justify-between text-sm text-gray-500">
                                            <span class="flex items-center">
                                                <i class="fas fa-map-marker-alt mr-1 text-red-500"></i>
                                                {% if announcement.location and announcement.location|trim != '' %}
                                                    {{ announcement.location }}
                                                {% else %}
                                                    Lieu non spécifié
                                                {% endif %}
                                            </span>
                                            <span class="flex items-center">
                                                <i class="far fa-calendar mr-1 text-green-500"></i>
                                                {{ announcement.created_at|date("d/m/Y") }}
                                            </span>
                                            {% if announcement.duration %}
                                                <span class="flex items-center ml-4">
                                                    <i class="far fa-clock mr-1 text-blue-500"></i>
                                                    {{ announcement.duration }}
                                                </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    
                                    <div class="flex items-center space-x-2">
                                        <a href="/student/dashboard/announcement/{{ announcement.id }}" 
                                           class="px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors duration-300">
                                            <i class="fas fa-eye mr-1"></i>
                                            Détails
                                        </a>
                                        <a href="/student/dashboard/apply/{{ announcement.id }}" 
                                           class="px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors duration-300">
                                            <i class="fas fa-paper-plane mr-1"></i>
                                            Postuler
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Recent Applications -->
        <div class="lg:col-span-1">
            <div class="glass-effect rounded-2xl p-8 fade-in">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold text-gray-800">Mes candidatures récentes</h2>
                    <a href="/student/dashboard/applications" class="text-indigo-600 hover:text-indigo-800 font-medium">
                        Voir tout
                        <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
                
                {% if recent_applications is empty %}
                    <div class="text-center py-12">
                        <i class="fas fa-file-alt text-6xl text-gray-300 mb-4"></i>
                        <h3 class="text-lg font-semibold text-gray-600 mb-2">Aucune candidature</h3>
                        <p class="text-gray-500 mb-4">Commencez à postuler aux offres pour voir vos candidatures ici</p>
                        <a href="/student/dashboard" class="btn-primary px-6 py-3 text-white font-medium rounded-lg hover:shadow-lg transition-all duration-300 inline-block">
                            <i class="fas fa-search mr-2"></i>
                            Découvrir les offres
                        </a>
                    </div>
                {% else %}
                    <div class="space-y-4">
                        {% for application in recent_applications %}
                            <div class="bg-white rounded-lg p-6 border border-gray-100 hover:border-indigo-200 transition-all duration-300">
                                <div class="flex justify-between items-start">
                                    <div class="flex-1">
                                        <h3 class="font-semibold text-gray-800 mb-2">{{ application.title }}</h3>
                                        <div class="flex items-center space-x-4 text-sm text-gray-600 mb-3">
                                            <span class="flex items-center">
                                                <i class="fas fa-building mr-1 text-indigo-500"></i>
                                                {{ application.company_name }}
                                            </span>
                                            <span class="flex items-center">
                                                <i class="fas fa-map-marker-alt mr-1 text-red-500"></i>
                                                {{ application.location }}
                                            </span>
                                            <span class="flex items-center">
                                                <i class="far fa-calendar mr-1 text-green-500"></i>
                                                {{ application.applied_at|date("d/m/Y") }}
                                            </span>
                                        </div>
                                        <div class="flex items-center justify-between">
                                            <span class="px-3 py-1 {% if application.status == 'pending' %}bg-yellow-100 text-yellow-700{% elseif application.status == 'accepted' %}bg-green-100 text-green-700{% else %}bg-red-100 text-red-700{% endif %} text-xs font-medium rounded-full">
                                                {% if application.status == 'pending' %}
                                                    <i class="fas fa-clock mr-1"></i>En attente
                                                {% elseif application.status == 'accepted' %}
                                                    <i class="fas fa-check-circle mr-1"></i>Acceptée
                                                {% else %}
                                                    <i class="fas fa-times-circle mr-1"></i>Refusée
                                                {% endif %}
                                            </span>
                                            <a href="/student/dashboard/announcement/{{ application.announcement_id }}" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">
                                                Voir l'offre
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Recommended Announcements -->
        <div class="lg:col-span-1">
            <div class="glass-effect rounded-2xl p-8 fade-in">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">
                    <i class="fas fa-star mr-2 text-yellow-500"></i>
                    Recommandé pour vous
                </h2>
                
                {% if recommended_announcements is empty %}
                    <div class="text-center py-8">
                        <i class="fas fa-lightbulb text-4xl text-gray-300 mb-3"></i>
                        <p class="text-gray-500 text-sm">Completez votre profil pour voir des recommandations personnalisées</p>
                    </div>
                {% else %}
                    <div class="space-y-4">
                        {% for announcement in recommended_announcements %}
                            <div class="bg-white rounded-lg p-4 border border-gray-100 hover:border-indigo-200 transition-all duration-300 cursor-pointer" onclick="window.location.href='/student/dashboard/announcement/{{ announcement.id }}'">
                                <h4 class="font-semibold text-gray-800 mb-2 line-clamp-2">{{ announcement.title }}</h4>
                                <div class="flex items-center justify-between text-sm">
                                    <span class="text-indigo-600 font-medium">{{ announcement.company_name }}</span>
                                    <span class="text-gray-500">{{ announcement.location }}</span>
                                </div>
                                <div class="mt-3">
                                    <span class="px-2 py-1 bg-indigo-100 text-indigo-700 text-xs font-medium rounded-full">
                                        {{ announcement.contract_type }}
                                    </span>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
                
                <div class="mt-6 pt-6 border-t border-gray-200">
                    <a href="/student/dashboard" class="w-full btn-primary px-4 py-3 text-white font-medium rounded-lg hover:shadow-lg transition-all duration-300 text-center block">
                        <i class="fas fa-search mr-2"></i>
                        Voir toutes les offres
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.fade-in {
    animation: fadeIn 0.5s ease-out;
}
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>

<script>
// Store all announcements for filtering
let allAnnouncements = [];

// Initialize announcements from server-side data
{% if announcements %}
    allAnnouncements = {{ announcements|json_encode|raw }};
{% endif %}

// Filter announcements
function filterAnnouncements() {
    const typeFilter = document.getElementById('typeFilter').value;
    const searchInput = document.getElementById('searchInput').value.toLowerCase();
    
    let filtered = allAnnouncements;
    
    // Filter by type
    if (typeFilter) {
        filtered = filtered.filter(announcement => announcement.contract_type === typeFilter);
    }
    
    // Filter by search
    if (searchInput) {
        filtered = filtered.filter(announcement => 
            announcement.title.toLowerCase().includes(searchInput) ||
            announcement.description.toLowerCase().includes(searchInput) ||
            (announcement.company_name && announcement.company_name.toLowerCase().includes(searchInput)) ||
            (announcement.location && announcement.location.toLowerCase().includes(searchInput)) ||
            (announcement.skills && announcement.skills.toLowerCase().includes(searchInput))
        );
    }
    
    // Update the announcements list
    updateAnnouncementsList(filtered);
}

// Update announcements list in DOM
function updateAnnouncementsList(announcements) {
    const announcementsList = document.getElementById('announcementsList');
    
    if (announcements.length === 0) {
        announcementsList.innerHTML = `
            <div class="text-center py-12">
                <i class="fas fa-inbox text-6xl text-gray-300 mb-4"></i>
                <h3 class="text-xl font-semibold text-gray-600 mb-2">Aucune offre trouvée</h3>
                <p class="text-gray-500 mb-4">Essayez d'autres filtres ou termes de recherche</p>
            </div>
        `;
    } else {
        announcementsList.innerHTML = announcements.map(announcement => `
            <div class="bg-white rounded-lg p-6 border border-gray-100 hover:border-indigo-200 transition-all duration-300 cursor-pointer" 
                 onclick="window.location.href='/student/dashboard/announcement/${announcement.id}'">
                <div class="flex justify-between items-start mb-4">
                    <div class="flex-1">
                        <div class="flex items-center space-x-3 mb-2">
                            <span class="px-3 py-1 bg-indigo-100 text-indigo-700 text-xs font-medium rounded-full">
                                ${announcement.contract_type || 'Non spécifié'}
                            </span>
                            <span class="px-3 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">
                                ${announcement.company_name || 'Entreprise non spécifiée'}
                            </span>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-800 mb-2 line-clamp-2">${announcement.title}</h3>
                        <p class="text-sm text-gray-600 mb-3 line-clamp-3">${announcement.description}</p>
                        
                        <div class="flex flex-wrap gap-2 mb-3">
                            ${announcement.skills ? announcement.skills.split(',').slice(0, 4).map(skill => 
                                `<span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">${skill.trim()}</span>`
                            ).join('') : ''}
                            ${announcement.skills && announcement.skills.split(',').length > 4 ? 
                                `<span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">+${announcement.skills.split(',').length - 4}</span>` : ''}
                        </div>
                        
                        <div class="flex items-center justify-between text-sm text-gray-500">
                            <span class="flex items-center">
                                <i class="fas fa-map-marker-alt mr-1 text-red-500"></i>
                                ${announcement.location || 'Lieu non spécifié'}
                            </span>
                            <span class="flex items-center">
                                <i class="far fa-calendar mr-1 text-green-500"></i>
                                ${new Date(announcement.created_at).toLocaleDateString('fr-FR')}
                            </span>
                            ${announcement.duration ? `
                                <span class="flex items-center ml-4">
                                    <i class="far fa-clock mr-1 text-blue-500"></i>
                                    ${announcement.duration}
                                </span>
                            ` : ''}
                        </div>
                    </div>
                    
                    <div class="flex items-center space-x-2">
                        <a href="/student/dashboard/announcement/${announcement.id}" 
                           class="px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 transition-colors duration-300">
                            <i class="fas fa-eye mr-1"></i>
                            Détails
                        </a>
                        <a href="/student/dashboard/apply/${announcement.id}" 
                           class="px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 transition-colors duration-300">
                            <i class="fas fa-paper-plane mr-1"></i>
                            Postuler
                        </a>
                    </div>
                </div>
            </div>
        `).join('');
    }
}

// Search functionality
function searchAnnouncements() {
    filterAnnouncements();
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    filterAnnouncements();
});
</script>
{% endblock %}
