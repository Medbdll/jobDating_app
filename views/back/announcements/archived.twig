                <span class="text-3xl">üì¶</span>
                Annonces Archiv√©es
            </h1>
            <a href="/admin/dashboard" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg flex items-center gap-2 transition-all duration-300 hover:shadow-lg">
                <span>üîô</span>
                Retour au Dashboard
            </a>
        </div>

        <!-- Content -->
        <div class="bg-white rounded-2xl shadow-2xl p-6">
            {% if archivedAnnouncements is empty %}
                <div class="text-center py-12">
                    <div class="text-6xl mb-4">üì¶</div>
                    <h3 class="text-xl font-semibold text-gray-700 mb-2">Aucune annonce archiv√©e</h3>
                    <p class="text-gray-500">Aucune annonce n'a √©t√© archiv√©e pour le moment.</p>
                    <a href="/admin/dashboard" class="bg-primary hover:bg-opacity-90 text-white px-6 py-2 rounded-lg inline-flex items-center gap-2 transition-all duration-300 hover:shadow-lg mt-4">
                        <span class="flex items-center gap-2">
                            <span>üéØ</span>
                            Retour au Dashboard
                        </span>
                    </a>
                </div>
            {% else %}
                <div class="mb-4">
                    <p class="text-gray-600">
                        <span class="font-semibold">{{ archivedAnnouncements|length }}</span> annonce(s) archiv√©e(s)
                    </p>
                </div>

                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead>
                            <tr class="border-b border-gray-200">
                                <th class="text-left py-3 px-4 font-semibold text-gray-700">Titre</th>
                                <th class="text-left py-3 px-4 font-semibold text-gray-700">Entreprise</th>
                                <th class="text-left py-3 px-4 font-semibold text-gray-700">Localisation</th>
                                <th class="text-left py-3 px-4 font-semibold text-gray-700">Type</th>
                                <th class="text-left py-3 px-4 font-semibold text-gray-700">Date de cr√©ation</th>
                                <th class="text-center py-3 px-4 font-semibold text-gray-700">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for announcement in archivedAnnouncements %}
                                <tr class="border-b border-gray-100 hover:bg-gray-50 transition-colors">
                                    <td class="py-3 px-4">
                                        <div class="font-medium text-gray-900">{{ announcement.title }}</div>
                                        <div class="text-sm text-gray-500 mt-1">
                                            {{ announcement.description|slice(0, 100) ~ (announcement.description|length > 100 ? '...' : '') }}
                                        </div>
                                    </td>
                                    <td class="py-3 px-4">
                                        <span class="text-gray-600">{{ announcement.company_name ?? 'Non sp√©cifi√©e' }}</span>
                                    </td>
                                    <td class="py-3 px-4">
                                        <span class="text-gray-600">{{ announcement.location ?? 'Non sp√©cifi√©e' }}</span>
                                    </td>
                                    <td class="py-3 px-4">
                                        <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-xs font-medium">
                                            {% if announcement.contract_type == 'job' %}Emploi{% endif %}
                                            {% if announcement.contract_type == 'internship' %}Stage{% endif %}
                                            {% if announcement.contract_type == 'alternance' %}Alternance{% endif %}
                                            {% if announcement.contract_type not in ['job', 'internship', 'alternance'] %}Autre{% endif %}
                                        </span>
                                    </td>
                                    <td class="py-3 px-4">
                                        <span class="text-gray-600">
                                            {{ announcement.created_at ? announcement.created_at|date('d/m/Y H:i') : 'N/A' }}
                                        </span>
                                    </td>
                                    <td class="py-3 px-4">
                                        <div class="flex justify-center gap-2">
                                            <form action="/announcements/unarchive/{{ announcement.id }}" method="POST" style="display: inline;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir d√©sarchiver cette annonce?')">
                                                <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-sm transition-colors" title="D√©sarchiver">
                                                    üîÑ D√©sarchiver
