                                                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm transition-colors" title="Supprimer">
                                                    üóëÔ∏è Supprimer
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>

    <script>
        // Fonction pour confirmer les actions
        function confirmAction(message) {
            return confirm(message);
        }
    </script>
</body>
</html>