{% extends "layout.twig" %}

{% block content %}
<div class="min-h-screen flex items-center justify-center px-4 py-8">
    <div class="w-full max-w-2xl">
        <!-- Compact Header -->
        <div class="text-center mb-6 fade-in">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-2xl shadow-lg mb-4">
                <i class="fas fa-user-plus text-white text-2xl"></i>
            </div>
            <h1 class="text-3xl font-bold text-white mb-2">Créer un compte</h1>
            <p class="text-purple-100">Rejoignez la communauté Job Dating</p>
        </div>
        
        <!-- Compact Register Card -->
        <div class="glass-effect rounded-2xl shadow-xl p-6 backdrop-blur-xl fade-in">
            <!-- Alerts -->
            {% if error %}
                <div class="mb-4 bg-red-50 border border-red-200 text-red-700 p-3 rounded-lg flex items-center animate-pulse">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    {{ error }}
                </div>
            {% endif %}
            
            {% if errors %}
                <div class="mb-4 bg-amber-50 border border-amber-200 text-amber-800 p-3 rounded-lg">
                    <div class="flex items-center mb-2">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        <strong class="text-sm">Erreurs à corriger:</strong>
                    </div>
                    <div class="text-sm space-y-1">
                        {% for field, fieldErrors in errors %}
                            {% for fieldError in fieldErrors %}
                                <div class="flex items-center">
                                    <i class="fas fa-chevron-right text-amber-600 mr-2 text-xs"></i>
                                    <span>{{ fieldError }}</span>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
            
            {% if success %}
                <div class="mb-4 bg-green-50 border border-green-200 text-green-700 p-3 rounded-lg flex items-center">
                    <i class="fas fa-check-circle mr-2"></i>
                    {{ success }}
                </div>
            {% endif %}

            <!-- Compact Form -->
            <form method="post" action="/register" class="space-y-4">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                
                <!-- Role Selection - Student Only -->
                <input type="hidden" name="role" value="student" id="student-role">
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <div class="flex items-center">
                        <i class="fas fa-graduation-cap text-blue-600 text-xl mr-3"></i>
                        <div>
                            <div class="font-medium text-blue-900">Compte Étudiant</div>
                            <div class="text-sm text-blue-700">Accédez aux opportunités professionnelles</div>
                        </div>
                    </div>
                </div>
                
                <!-- Personal Info -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="space-y-1">
                        <label for="name" class="block text-sm font-medium text-gray-700">
                            <i class="fas fa-user text-purple-600 mr-1"></i>Nom
                        </label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name" 
                            placeholder="Jean Dupont" 
                            value="{{ old.name ?? '' }}" 
                            required
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent text-sm"
                        >
                    </div>
                    
                    <div class="space-y-1">
                        <label for="email" class="block text-sm font-medium text-gray-700">
                            <i class="fas fa-envelope text-purple-600 mr-1"></i>Email
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            placeholder="email@exemple.com" 
                            value="{{ old.email ?? '' }}" 
                            required
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent text-sm"
                        >
                    </div>
                </div>
                
                <!-- Password Fields -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="space-y-1">
                        <label for="password" class="block text-sm font-medium text-gray-700">
                            <i class="fas fa-lock text-purple-600 mr-1"></i>Mot de passe
                        </label>
                        <div class="relative">
                            <input 
                                type="password" 
                                id="password" 
                                name="password" 
                                placeholder="Min 8 caractères" 
                                required 
                                minlength="8"
                                class="w-full px-3 py-2 pr-8 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent text-sm"
                            >
                            <button type="button" onclick="togglePasswordField('password', 'passwordToggle')" class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-purple-600 text-sm">
                                <i class="fas fa-eye" id="passwordToggle"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="space-y-1">
                        <label for="password_confirmation" class="block text-sm font-medium text-gray-700">
                            <i class="fas fa-check text-purple-600 mr-1"></i>Confirmation
                        </label>
                        <div class="relative">
                            <input 
                                type="password" 
                                id="password_confirmation" 
                                name="password_confirmation" 
                                placeholder="Confirmer" 
                                required
                                class="w-full px-3 py-2 pr-8 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent text-sm"
                            >
                            <button type="button" onclick="togglePasswordField('password_confirmation', 'confirmToggle')" class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-purple-600 text-sm">
                                <i class="fas fa-eye" id="confirmToggle"></i>
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- Student Fields - Always Visible -->
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="space-y-1">
                            <label for="promotion" class="block text-sm font-medium text-gray-700">
                                <i class="fas fa-calendar text-blue-600 mr-1"></i>Promotion
                            </label>
                            <select 
                                id="promotion" 
                                name="promotion"
                                required
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
                            >
                                <option value="">Sélectionner</option>
                                <option value="2023-2024" {{ old.promotion == '2023-2024' ? 'selected' : '' }}>2023-2024</option>
                                <option value="2024-2025" {{ old.promotion == '2024-2025' ? 'selected' : '' }}>2024-2025</option>
                                <option value="2025-2026" {{ old.promotion == '2025-2026' ? 'selected' : '' }}>2025-2026</option>
                                <option value="2026-2027" {{ old.promotion == '2026-2027' ? 'selected' : '' }}>2026-2027</option>
                            </select>
                        </div>
                        
                        <div class="space-y-1">
                            <label for="specialization" class="block text-sm font-medium text-gray-700">
                                <i class="fas fa-book text-blue-600 mr-1"></i>Spécialisation
                            </label>
                            <select 
                                id="specialization" 
                                name="specialization"
                                required
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
                            >
                                <option value="">Sélectionner</option>
                                <option value="informatique" {{ old.specialization == 'informatique' ? 'selected' : '' }}>Informatique</option>
                                <option value="genie-civil" {{ old.specialization == 'genie-civil' ? 'selected' : '' }}>Génie Civil</option>
                                <option value="electrique" {{ old.specialization == 'electrique' ? 'selected' : '' }}>Génie Électrique</option>
                                <option value="mecanique" {{ old.specialization == 'mecanique' ? 'selected' : '' }}>Génie Mécanique</option>
                                <option value="management" {{ old.specialization == 'management' ? 'selected' : '' }}>Management</option>
                                <option value="marketing" {{ old.specialization == 'marketing' ? 'selected' : '' }}>Marketing</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <!-- Submit Button -->
                <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                    <div class="text-xs text-gray-500">
                        <i class="fas fa-shield-alt mr-1"></i>
                        Sécurisé et protégé
                    </div>
                    <button type="submit" class="btn-primary px-6 py-2 text-white font-semibold rounded-lg shadow hover:shadow-lg transform hover:scale-105 transition-all duration-200 text-sm flex items-center">
                        <i class="fas fa-user-plus mr-2"></i>
                        S'inscrire
                    </button>
                </div>
            </form>
            
            <!-- Footer -->
            <div class="mt-6 text-center pt-4 border-t border-gray-200">
                <p class="text-gray-600 text-sm mb-2">
                    Déjà un compte?
                </p>
                <a href="/login" class="text-purple-600 hover:text-purple-500 font-medium text-sm">
                    <i class="fas fa-sign-in-alt mr-1"></i>
                    Se connecter
                </a>
            </div>
        </div>
    </div>
</div>

<script>
function togglePasswordField(fieldId, toggleId) {
    const passwordField = document.getElementById(fieldId);
    const toggleIcon = document.getElementById(toggleId);
    
    if (passwordField.type === 'password') {
        passwordField.type = 'text';
        toggleIcon.classList.remove('fa-eye');
        toggleIcon.classList.add('fa-eye-slash');
    } else {
        passwordField.type = 'password';
        toggleIcon.classList.remove('fa-eye-slash');
        toggleIcon.classList.add('fa-eye');
    }
}

// Form validation
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const password = document.getElementById('password');
    const passwordConfirm = document.getElementById('password_confirmation');
    
    form.addEventListener('submit', function(e) {
        if (password.value !== passwordConfirm.value) {
            e.preventDefault();
            showNotification('Les mots de passe ne correspondent pas', 'error');
            passwordConfirm.focus();
        }
    });
});

// Show notification function
function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 p-3 rounded-lg shadow-lg z-50 flex items-center text-sm ${
        type === 'error' ? 'bg-red-500 text-white' : 'bg-green-500 text-white'
    }`;
    notification.innerHTML = `
        <i class="fas ${type === 'error' ? 'fa-exclamation-circle' : 'fa-check-circle'} mr-2"></i>
        ${message}
    `;
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.remove();
    }, 3000);
}
</script>
{% endblock %}
