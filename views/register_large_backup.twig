<script>
function toggleRoleFields() {
    const role = document.querySelector('input[name="role"]:checked')?.value;
    const studentFields = document.getElementById('student-fields');
    const adminFields = document.getElementById('admin-fields');
    const progressBar = document.getElementById('progressBar');
    
    if (role === 'student') {
        studentFields.classList.remove('hidden');
        studentFields.classList.add('fade-in');
        adminFields.classList.add('hidden');
        document.getElementById('promotion').required = true;
        document.getElementById('specialization').required = true;
        progressBar.style.width = '100%';
    } else if (role === 'admin') {
        studentFields.classList.add('hidden');
        adminFields.classList.remove('hidden');
        adminFields.classList.add('fade-in');
        document.getElementById('promotion').required = false;
        document.getElementById('specialization').required = false;
        progressBar.style.width = '75%';
    } else {
        studentFields.classList.add('hidden');
        adminFields.classList.add('hidden');
        progressBar.style.width = '33%';
    }
}

function togglePasswordField(fieldId, toggleId) {
    const passwordField = document.getElementById(fieldId);
    const toggleIcon = document.getElementById(toggleId);
    
    if (passwordField.type === 'password') {
        passwordField.type = 'text';
        toggleIcon.classList.remove('fa-eye');
        toggleIcon.classList.add('fa-eye-slash');
    } else {
        passwordField.type = 'password';
        toggleIcon.classList.remove('fa-eye-slash');
        toggleIcon.classList.add('fa-eye');
    }
}

// Password strength indicator
const passwordField = document.getElementById('password');
const lengthCheck = document.getElementById('length-check');

passwordField?.addEventListener('input', function() {
    if (this.value.length >= 8) {
        lengthCheck.classList.remove('fa-times', 'text-gray-400');
        lengthCheck.classList.add('fa-check', 'text-green-500');
    } else {
        lengthCheck.classList.remove('fa-check', 'text-green-500');
        lengthCheck.classList.add('fa-times', 'text-gray-400');
    }
});

// Form validation
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const password = document.getElementById('password');
    const passwordConfirm = document.getElementById('password_confirmation');
    
    // Initialize role fields
    toggleRoleFields();
    
    form.addEventListener('submit', function(e) {
        if (password.value !== passwordConfirm.value) {
            e.preventDefault();
            showNotification('Les mots de passe ne correspondent pas', 'error');
            passwordConfirm.focus();
        }
    });
});

// Show notification function
function showNotification(message, type) {
    const notification = document.createElement('div');
    notification.className = `fixed top-4 right-4 p-4 rounded-lg shadow-lg z-50 flex items-center animate-pulse ${
        type === 'error' ? 'bg-red-500 text-white' : 'bg-green-500 text-white'
    }`;
    notification.innerHTML = `
        <i class="fas ${type === 'error' ? 'fa-exclamation-circle' : 'fa-check-circle'} mr-3"></i>
        ${message}
    `;
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.remove();
    }, 3000);
}
</script>
